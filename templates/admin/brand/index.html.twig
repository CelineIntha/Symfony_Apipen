{% extends 'base.html.twig' %}

{% block title %}Brand index{% endblock %}

{% block body %}

{% include('admin/navbar.html.twig') %}

<div class="container">
    <h1 class="mt-3">Liste des marques</h1>

    <a href="{{ path('app_admin_brand_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>
                    <a href="{{ path('app_admin_brand_show', {'id': brand.id}) }}">show</a>
                    <a href="{{ path('app_admin_brand_edit', {'id': brand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
