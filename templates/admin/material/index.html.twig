{% extends 'base.html.twig' %}

{% block title %}Material index{% endblock %}

{% block body %}
{% include('admin/navbar.html.twig') %}

<div class="container">
    <h1>Liste des mat√©riaux</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.name }}</td>
                <td>
                    <a href="{{ path('app_admin_material_show', {'id': material.id}) }}">show</a>
                    <a href="{{ path('app_admin_material_edit', {'id': material.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_material_new') }}">Create new</a>
    </div>
{% endblock %}
